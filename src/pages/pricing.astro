---
import Base from "@/layouts/Base.astro";
import CallToAction from "@/partials/CallToAction.astro";
import Faq from "@/partials/Faq.astro";
import PricingPlanSection from "@/partials/PricingPlanSection.astro";
import PricingPlanTable from "@/partials/PricingPlanTable.astro";
import { getEntry } from "astro:content";

const indexData = (await getEntry("pricing", "-index")).data.hero;
---

<Base {...indexData.data}>
  <PricingPlanSection title={indexData.title} subtitle={indexData.subtitle} />
  <PricingPlanTable />
  <Faq />
  <CallToAction />
</Base>

