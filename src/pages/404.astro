---
import ImageMod from "@/components/ImageMod.astro";
import PrimaryArrowBtn from "@/components/PrimaryArrowBtn.astro";
import Base from "@/layouts/Base.astro";
---

<Base title="Page Not Found">
  <section class="section-page-heading text-center mb-16">
    <div class="container">
      <div class="flex flex-col items-center lg:col-8 mx-auto gap-10">
        <ImageMod src="/images/404.png" width={600} height={500} alt="404 Image" />
        <div>
          <h1 class="text-h3 md:text-h1 mb-4">Something Went Wrong.</h1>
          <p>
            We apologize, but it seems like there's been an error. Our team has been notified, and we are working
            diligently to resolve the issue.
          </p>
        </div>
        <PrimaryArrowBtn link="/" label="Back to Home" />
      </div>
    </div>
  </section>
</Base>
